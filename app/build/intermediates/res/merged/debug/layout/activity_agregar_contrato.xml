<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_contrato_nombre_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:text="Cliente"
            android:layout_alignTop="@+id/et_nombre_servicio"
            android:layout_alignBottom="@id/et_nombre_servicio"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp" />

        <Spinner
            android:id="@+id/spinner_contrato_nombre_cliente"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:layout_marginTop="5dip"
            android:layout_alignLeft="@+id/tv_nombre_servicio"
            android:layout_marginLeft="120dp"/>

        <TextView
            android:id="@+id/tv_contrato_nombre_trabajador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trabajador"
            android:textSize="10pt"
            android:layout_below="@id/tv_contrato_nombre_cliente"
            android:layout_alignBottom="@+id/spinner_contrato_nombre_trabajador"
            android:layout_alignTop="@+id/spinner_contrato_nombre_trabajador"
            android:layout_alignLeft="@+id/tv_contrato_nombre_cliente"/>

        <Spinner
            android:id="@+id/spinner_contrato_nombre_trabajador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinner_contrato_nombre_cliente"
            android:layout_below="@+id/spinner_contrato_nombre_cliente"
            android:layout_alignRight="@id/spinner_contrato_nombre_cliente"/>

        <TextView
            android:id="@+id/tv_contrato_nombre_servicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio"
            android:textSize="10pt"
            android:layout_below="@id/tv_contrato_nombre_cliente"
            android:layout_alignBottom="@+id/spinner_contrato_nombre_servicio"
            android:layout_alignTop="@+id/spinner_contrato_nombre_servicio"
            android:layout_alignLeft="@+id/tv_contrato_nombre_cliente"/>

        <Spinner
            android:id="@+id/spinner_contrato_nombre_servicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinner_contrato_nombre_cliente"
            android:layout_below="@+id/spinner_contrato_nombre_trabajador"
            android:layout_alignRight="@id/spinner_contrato_nombre_cliente" />

        <TextView
            android:id="@+id/tv_contrato_horas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horas"
            android:textSize="10pt"
            android:layout_below="@id/tv_contrato_nombre_servicio"
            android:layout_alignBottom="@+id/et_contrato_horas"
            android:layout_alignTop="@+id/et_contrato_horas"
            android:layout_alignLeft="@+id/tv_contrato_nombre_cliente"/>

        <EditText
            android:id="@+id/et_contrato_horas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinner_contrato_nombre_cliente"
            android:layout_below="@+id/spinner_contrato_nombre_servicio"
            android:layout_alignRight="@id/spinner_contrato_nombre_cliente"
            android:inputType="number"/>

        <Button
            android:id="@+id/btn_agregar_contrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACEPTAR"
            android:layout_below="@+id/tv_contrato_horas"
            android:layout_alignLeft="@+id/tv_contrato_nombre_cliente"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>
</ScrollView>